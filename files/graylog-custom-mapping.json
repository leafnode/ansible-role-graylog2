{
  "template": "graylog_*",
  "mappings" : {
    "message" : {
      "dynamic_templates" : [
        {
          "contexts": {
            "match_mapping_type": "string",
            "match":   "@fields_ctxt_*",
            "mapping": {
              "ignore_above": 512,
              "type": "string",
              "index": "not_analyzed",
              "doc_values": true
            }
          }
        }
      ]
    }
  }
}